<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#fff"
    tools:context=".SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50dp">

        <FrameLayout
            android:id="@+id/edit_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:id="@+id/view5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:background="@drawable/border_image_circle" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_picked_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center" />

            <View
                android:id="@+id/view6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@drawable/shaded_image_circle" />

            <ImageView
                android:id="@+id/pick_user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/add_photo_icon" />

        </FrameLayout>

        <EditText
            android:id="@+id/register_name_field"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_background_pink"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/full_name"
            android:inputType="textPersonName"
            android:textColorHint="@color/mainHintColor" />

        <EditText
            android:id="@+id/register_email_field"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background_pink"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/mainHintColor" />

        <EditText
            android:id="@+id/register_password_field"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background_pink"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/mainHintColor" />

        <EditText
            android:id="@+id/register_adress_field"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background_pink"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/address"
            android:inputType="text"
            android:textColorHint="@color/mainHintColor" />

        <EditText
            android:id="@+id/register_mobile_field"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background_pink"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColorHint="@color/mainHintColor" />

        <EditText
            android:id="@+id/register_model_field"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background_pink"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/car_model"
            android:inputType="text"
            android:textColorHint="@color/mainHintColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#9A9898"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="@string/language"
                android:textColor="#000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/userRegisterChooseLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:entries="@array/language_spinner"
                android:gravity="center"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <Button
            android:id="@+id/register_register_btn"
            android:layout_width="261dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="@string/sign_up"
            android:textColor="#FFF" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="#9A9898"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="@string/already_have_account"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="#9A9898"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="@string/sign_in"
                android:textColor="@color/mainPink"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>