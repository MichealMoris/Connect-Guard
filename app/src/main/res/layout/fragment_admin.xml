<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/bt_add"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"

            >
            <ImageView
                android:id="@+id/im_add_product"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/add_new"/>

            <TextView
                android:layout_below="@id/im_add_product"
                android:text="@string/tv_add_product"
                style="@style/AdminMainText"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_request"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            >
            <ImageView
                android:id="@+id/im_send_req"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/request"/>

            <TextView
                android:layout_below="@id/im_send_req"
                android:text="@string/tv_request"
                style="@style/AdminMainText"/>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>